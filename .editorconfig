root = true

[*]
charset         = utf-8
end_of_line     = lf
max_line_length = 100

[Makefile]
indent_style             = tab
indent_size              = tab
insert_final_newline     = true
trim_trailing_whitespace = true

[*.{html,css,scss,js,json}]
indent_style             = space
indent_size              = 2
insert_final_newline     = true
trim_trailing_whitespace = true
